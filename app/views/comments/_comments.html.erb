<h3>Comments</h3>
<% @post.comments.each do |comment| %>
  <div class="card mb-4">
    <div class="card-body">
      <p><strong><%= comment.username %></strong>: <%= comment.body %></p>
      <%= link_to 'Delete comment', [comment.post, comment],
                  method: :delete, data: {confirm: 'Are you sure?'}, class: 'btn btn-danger' %>
    </div>
  </div>
<% end %>