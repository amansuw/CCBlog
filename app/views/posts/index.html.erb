<h1>CC Blog Posts</h1>
<div class="row">
  <% @post.each do |post| %>
    <div class="col-sm-6">
      <div class="card text-center mb-4">
        <div class="card-header">
          <h3><%= post.title %></h3>
        </div>
        <div class="card-body">
          <p><%= post.body %></p>
          <%= link_to "Read More", post_path(post), :class => 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>